@model List<Salon_System.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
    var errorMessage = TempData["errorMessage"]?.ToString();
    var successMessage = TempData["successMessage"]?.ToString();
    var sameStateMessage = TempData["sameStateMessage"]?.ToString();
}
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <!--Displays a red banner with error message-->
    <div class="alert alert-danger">
        Error! @errorMessage
    </div>
}
else @if (!string.IsNullOrWhiteSpace(successMessage))
{

    <!--Displays a green banner with success message-->
    <div class="alert alert-success">
        @successMessage
    </div>
}
else @if (!string.IsNullOrWhiteSpace(sameStateMessage))
{
    <!--Displays a grey banner with same state message-->
    <div class="alert alert-secondary">
        @sameStateMessage
    </div>
}

<!--Title-->
<div class="container pt-3">
    <div class="card card-primary card-outline">
        <form>
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="text-right">@ViewData["Title"]</h2>
                    </div>
                    <div class="col-md-6">
                        <a href="/Employee/Create" class="btn btn-primary float-right" style="color:white;">Add Client</a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Job Title</th>
                            <th>Hire Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var employee in Model)
                            {
                                <tr onclick="viewEmployee(@employee.Id)">
                                    <td>@employee.Id</td>
                                    <td>@employee.FullName</td>
                                    <td>@employee.JobTitle</td>
                                    <td>@employee.HireDate?.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">
                                    <div>
                                        No Employees
                                    </div>
                                </td>
                            </tr>
                        } 
                    </tbody>
                </table>
                <!--    Needs to be coded to work properly -->
                <div class="container card-tools pt-5">
                    <ul class="pagination pagination-sm float-right">
                        <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/script/navview.js"></script>