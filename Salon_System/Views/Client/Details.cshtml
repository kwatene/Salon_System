@model Salon_System.Models.Client

@{
    ViewData["Title"] = "Details";
    var errorMessage = TempData["errorMessage"]?.ToString();
    var successMessage = TempData["successMessage"]?.ToString();
    var sameStateMessage = TempData["sameStateMessage"]?.ToString();
}
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <!--Displays a red banner with error message-->
    <div class="alert alert-danger">
        Error! @errorMessage
    </div>
}else @if(!string.IsNullOrWhiteSpace(successMessage))
{

    <!--Displays a green banner with success message-->
    <div class="alert alert-success">
        @successMessage
    </div>
}
else @if (!string.IsNullOrWhiteSpace(sameStateMessage))
{
    <!--Displays a grey banner with same state message-->
    <div class="alert alert-secondary">
        @sameStateMessage
    </div>
}

<!-- Title-->
<div class="container pt-3">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h2 class="text-center">@ViewData["Title"] for @Model.FullName</h2>
        </div>

        <!-- form start -->
        <form action="Delete" method="post" autocomplete="off">
            <div class="card-body ml-5">
                <!--Row 1-->
                <div class="row pt-1">
                    <!-- Id -->
                    <div class="form-group">
                        <input type="hidden" class="form-control" asp-for="Id" readonly />
                    </div>

                    <div class="col-sm-6">
                        <!-- Name -->
                        <div class="form-group">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" asp-for="FullName" readonly />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <!-- Gender -->
                        <div class="form-group">
                            <label class="form-label">Gender</label>
                            <input type="text" class="form-control" asp-for="Gender" readonly />
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <!-- DOB -->
                        <div class="form-group">
                            <label class="form-label">Date Of Birth</label>
                            <input type="date" class="form-control" asp-for="DateOfBirth" placeholder="DD/MM/YYYY" readonly>
                        </div>
                    </div>
                </div>

                <!--Row 2-->
                <div class="row pt-3">
                    <div class="col-sm-6">
                        <!-- Email -->
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" asp-for="Email" readonly />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <!-- Mobile -->
                        <div class="form-group">
                            <label class="form-label">Mobile</label>
                            <input type="text" class="form-control" asp-for="Phone" readonly />
                        </div>
                    </div>
                </div>

                <!--Row 3-->
                <div class="row pt-3">
                    <div class="col-sm-6">
                        <!-- Address -->
                        <div class="form-group">
                            <label class="form-label">Address</label><br />
                            <input type="text" class="form-control" asp-for="Address" readonly />
                            <input type="text" class="form-control" asp-for="Suburb" readonly />
                            <input type="text" class="form-control" asp-for="City" readonly />
                            <input type="text" class="form-control" asp-for="Country" readonly />
                            <input type="text" class="form-control" asp-for="PostCode" readonly />
                        </div>
                    </div>
                </div>

                <!-- card-footer-->
                <div class="card-footer float-right" style="background-color:transparent;">
                    <a id="liBackCli" href="/Client/Index" class="link mr-3">Back</a>
                    <button id="btnDeleteCli" type="submit" class="btn btn-danger mr-3" onclick="return confirm('Are you sure you want to remove @Model?.FullName?')">Delete</button>
                    <a id="btnUpdateCli"href="/Client/Update/@Model?.Id" class="btn btn-primary mr-5">Update</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/script/navview.js"></script>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}