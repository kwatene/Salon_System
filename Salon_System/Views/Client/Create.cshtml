@model Salon_System.Models.Client

@{
    ViewData["Title"] = "Create New Client";
    var errorMessage = TempData["errorMessage"]?.ToString();
    var successMessage = TempData["successMessage"]?.ToString();
}
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <!--Displays a red banner with error message-->
    <div class="alert alert-danger">
        Error! @errorMessage
    </div>
}
else @if (!string.IsNullOrWhiteSpace(successMessage))
{

    <!--Displays a green banner with success message-->
    <div class="alert alert-success">
        @successMessage
    </div>
}


<!-- Title-->
<div class="container col-sm-10 pt-3">
    <div class="card card-white pt-3">
        <h2 class="text-center">@ViewData["Title"]</h2>
    </div>
</div>

<!-- New Client Form-->
<section class="content">
    <div class="container-fluid col-sm-10">
        <div class="card card-primary card-outline">
            <div class="card-header pt-1">
                <h3 class="card-title">Client Details</h3>
            </div>

            <div class="card-body">
                <!-- form start -->
                <form action="Create" method="post" autocomplete="off">
                    <div class="card-body">
                        <div class="row pt-1">
                            <div class="col-sm-3">
                                <!-- text input -->
                                <div class="form-group">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" asp-for="FirstName" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <!-- text input -->
                                <div class="form-group">
                                    <label class="form-label">Last name</label>
                                    <input type="text" class="form-control" asp-for="LastName" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <!-- select input -->
                                <div class="form-group">
                                    <label class="form-label">Gender</label>
                                    <select class="form-control" asp-for="Gender">
                                        <option disabled selected value="">Select</option>
                                        <option>Female</option>
                                        <option>Male</option>
                                        <option>Rather not say</option>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <!-- text input -->
                                <div class="form-group">
                                    <label class="form-label">Date Of Birth</label>
                                    <input type="date" class="form-control" asp-for="DateOfBirth" placeholder="DD/MM/YYYY">
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-3">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label class="form-label">Email</label>
                                    <input type="text" class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <!-- text input -->
                                <div class="form-group">
                                    <label class="form-label">Mobile Phone</label>
                                    <input type="text" class="form-control" asp-for="Phone" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-3">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label class="form-label">Address</label><br />
                                    <a>Street Name and Number</a>
                                    <input type="text" class="form-control" asp-for="Address" />
                                    <span asp-validation-for="Address"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <a>Suburb</a>
                                    <input type="text" class="form-control" asp-for="Suburb" />
                                    <span asp-validation-for="Suburb"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <a>City</a>
                                    <input type="text" class="form-control" asp-for="City" />
                                    <span asp-validation-for="City"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <!-- text input -->
                                <div class="form-group">
                                    <a>Country</a>
                                    <input type="text" class="form-control" asp-for="Country" />
                                    <span asp-validation-for="Country"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <!-- text input -->
                                <div class="form-group">
                                    <a>Postcode</a>
                                    <input type="text" class="form-control" asp-for="PostCode" />
                                    <span asp-validation-for="PostCode"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer float-right" style="background-color:transparent;">
                            <a href="/Client/Index" class="link mr-3">Cancel</a>
                            <button type="submit" class="btn btn-primary float-right mr-5">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
